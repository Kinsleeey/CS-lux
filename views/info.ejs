<%- include('partials/header') %>

<section class="project-info">
    <div class="info-card">
            <div class="info-card-img">
                <img id="product-image-in-info" src="<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="info-card-writeup">
                <a href="/product" class="close-x">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#000000" viewBox="0 0 256 256"><path d="M205.66,194.34a8,8,0,0,1-11.32,11.32L128,139.31,61.66,205.66a8,8,0,0,1-11.32-11.32L116.69,128,50.34,61.66A8,8,0,0,1,61.66,50.34L128,116.69l66.34-66.35a8,8,0,0,1,11.32,11.32L139.31,128Z"></path></svg>
                </a>
                <h4><%= product.name %></h4>
                <p><%= product.description %></p>
                
                <% if(variants.length > 0 && variants[0].size !== "") {%>
                    <div class="icw-size">
                        <p>Size Available</p>
                        <div class="a-size flex-c gap025">
                            <% variants.forEach(variant => { %>
                                <label class="size-checkbox">
                                    <input type="checkbox" name="size" value="<%= variant.size %>" id="size-<%= variant.size %>">
                                    <span class="checkmark"><%= variant.size %></span>
                                </label>
                            <% }) %>
                        </div>
                    </div>
                <% } else { %>

                <% } %>

                <h4>#<%= product.price %></h4>

                <button onclick="addToCart(<%= product.id %>); return false;">Add to cart</button>
                <button>Add to Favourite</button>
            </div>
    </div>
    <div class="product-center">
            <div class="product-sect">
                <span class="product-sect-header flex-sb-c">
                    <h3>Related Item</h3>
                    <span class=" flex-sb-c gap025">
                        <p>Sort</p>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#000000" viewBox="0 0 256 256"><path d="M128,128a8,8,0,0,1-8,8H48a8,8,0,0,1,0-16h72A8,8,0,0,1,128,128ZM48,72H184a8,8,0,0,0,0-16H48a8,8,0,0,0,0,16Zm56,112H48a8,8,0,0,0,0,16h56a8,8,0,0,0,0-16Zm125.66-21.66a8,8,0,0,0-11.32,0L192,188.69V112a8,8,0,0,0-16,0v76.69l-26.34-26.35a8,8,0,0,0-11.32,11.32l40,40a8,8,0,0,0,11.32,0l40-40A8,8,0,0,0,229.66,162.34Z"></path></svg>
                    </span>
                </span>
                <div class=" grid-x4">
                    <% for(let p of relatedProducts) { %>
                            <a href="/info/<%= p.id %>">
                                <div class="item">
                                    <div class="item-img">
                                        <div class="greyback"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#000000" viewBox="0 0 256 256"><path d="M178,40c-20.65,0-38.73,8.88-50,23.89C116.73,48.88,98.65,40,78,40a62.07,62.07,0,0,0-62,62c0,70,103.79,126.66,108.21,129a8,8,0,0,0,7.58,0C136.21,228.66,240,172,240,102A62.07,62.07,0,0,0,178,40ZM128,214.8C109.74,204.16,32,155.69,32,102A46.06,46.06,0,0,1,78,56c19.45,0,35.78,10.36,42.6,27a8,8,0,0,0,14.8,0c6.82-16.67,23.15-27,42.6-27a46.06,46.06,0,0,1,46,46C224,155.61,146.24,204.15,128,214.8Z"></path></svg></div>
                                        <img src="<%= p.image %>"/>
                                    </div>
                                    <div class="item-footer flex-sb-c">
                                        <span>
                                            <p><%= p.name %></p>
                                            <p>#<%= p.price %></p>
                                        </span>
                                        <div class="gback"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#000000" viewBox="0 0 256 256"><path d="M230.14,58.87A8,8,0,0,0,224,56H62.68L56.6,22.57A8,8,0,0,0,48.73,16H24a8,8,0,0,0,0,16h18L67.56,172.29a24,24,0,0,0,5.33,11.27,28,28,0,1,0,44.4,8.44h45.42A27.75,27.75,0,0,0,160,204a28,28,0,1,0,28-28H91.17a8,8,0,0,1-7.87-6.57L80.13,152h116a24,24,0,0,0,23.61-19.71l12.16-66.86A8,8,0,0,0,230.14,58.87ZM104,204a12,12,0,1,1-12-12A12,12,0,0,1,104,204Zm96,0a12,12,0,1,1-12-12A12,12,0,0,1,200,204Zm4-74.57A8,8,0,0,1,196.1,136H77.22L65.59,72H214.41Z"></path></svg></div>
                                    </div>
                                </div>
                            </a>
                    <% } %>                    
                </div>
            </div>
    </div>
</section>

<%- include('partials/footer') %>